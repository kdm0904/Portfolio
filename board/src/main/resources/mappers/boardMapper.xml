<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prac.board.mappers.board">
	<!-- 게시물 목록 -->
	<select id="list" resultType="com.prac.board.vo.BoardVO">
		select*from tbl_board
	</select>
	
	<!-- 글쓰기 -->
	<insert id="write" parameterType="com.prac.board.vo.BoardVO">
		insert into
		tbl_board(title,
		content, writer)
		values(#{title}, #{content}, #{writer})
	</insert>
</mapper>